<!-- Create var modal -->
<script>
  GATERDATA.accAppMap = [];
  {% for appid, application in applications %}
  GATERDATA.accAppMap[{{ appid }}] = {'accid': {{ application.accid }}, 'name': "{{ application.name }}"};
  {% endfor %}
</script>
<div id="modal-var-create" class="modal">
  <form method="post" action="/var/create" id="var-create">
    <div class="modal-content">
      <h4>Create Var</h4>

      <div class="row">

        <div class="col s3">
          <div class="input-field">
            <select class="input-field" name="accid">
              <option value="">None</option>
              {% for accid, account in accounts %}
                <option value="{{ accid }}">{{ account }}</option>
              {% endfor %}
            </select>
            <label for="accid">Account</label>
          </div>
        </div>

        <div class="col s3">
          <div class="input-field">
            <select class="input-field" name="appid">
              <option value="">None</option>
              {% for appid, application in applications %}
                <option value="{{ appid }}" accid="{{ application.accid }}">{{ application.name }}</option>
              {% endfor %}
            </select>
            <label for="appid">Application</label>
          </div>
        </div>

        <div class="col s3">
          <div class="input-field">
            <input type="text" class="validate" name="key" required>
            <label for="key">Var key</label>
          </div>
        </div>

        <div class="col s3">
          <div class="input-field">
            <input type="text" class="validate" name="val" required>
            <label for="val">Var value</label>
          </div>
        </div>

      </div>

      <div class="row">
        <div class="input-field col s4 offset-s8">
          <a class="modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
          <button class="btn waves-effect waves-light" type="submit">Create</button>
        </div>
      </div>

    </div>
  </form>
</div>
