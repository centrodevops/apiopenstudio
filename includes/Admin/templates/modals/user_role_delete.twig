<!-- Delete account modal -->
<div id="modal-user-role-delete" class="modal">
  <form method="post" action="/user/role/delete" id="user-role-delete">
    <input type="hidden" name="urid" value="">
    <div class="modal-content">
      <h4>Delete User role</h4>
      <p>Are you sure you want to delete this role?</p>
      <div class="row">
        <div class="col s6">Username:</div>
        <div class="col s6 user"></div>
      </div>
      <div class="row">
        <div class="col s6">Account:</div>
        <div class="col s6 acc"></div>
      </div>
      <div class="row">
        <div class="col s6">Application:</div>
        <div class="col s6 app"></div>
      </div>
      <div class="row">
        <div class="col s6">Role:</div>
        <div class="col s6 role"></div>
      </div>
      <div class="row">
        <div class="input-field col s4 offset-s8">
          <a class=" modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
          <button class="btn waves-red" type="submit">DELETE</button>
        </div>
      </div>
    </div>
  </form>
</div>
