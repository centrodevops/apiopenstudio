name: User login Drupal

description: Login a user to the system, using user/pass validation on an external Drupal site

uri: user/login/drupal

method: post

appid: 1

ttl: 0

process:
  function: loginStoreDrupal
  id: 1
  source:
    function: url
    id: 2
    source:
      function: concatenate
      id: 3
      sources:
        - function: varPersistent
          id: 4
          key: drupalUrl
          operation: fetch
        - "api/anon/user/login"
    method: post
    reportError: true
    normalise: true
    vars:
      username:
        function: var_post
        id: 5
        key: username
      password:
        function: var_post
        id: 6
        key: password
    curlOpts:
      CURLOPT_SSL_VERIFYPEER: 0
      CURLOPT_FOLLOWLOCATION: 1
